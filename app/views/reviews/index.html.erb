<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>From user</th>
      <th>To user</th>
      <th>Stars</th>
      <th>Title</th>
      <th>Comment</th>
      <th>Type of review</th>
      <th>Carpool</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.from_user_id %></td>
        <td><%= review.to_user_id %></td>
        <td><%= review.stars %></td>
        <td><%= review.title %></td>
        <td><%= review.comment %></td>
        <td><%= review.type_of_review %></td>
        <td><%= review.carpool_id %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
