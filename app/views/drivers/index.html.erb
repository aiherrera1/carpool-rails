<h1>All Drivers</h1>
<h2>(This view will be only available for the admin user)</h2>

<div>
    <% @drivers.each do |driver| %>
    <div>
        <h3> <%= driver.user.name %></h3>
        <p>License ID: <%= driver.driver_license_number %></p>
        <p>License Plate: <%= driver.nice_license_plate %></p>
        <p><%= driver.carpools.count %></p>
    </div>
    <% end %>
</div>
<%= link_to "Back", root_path %>